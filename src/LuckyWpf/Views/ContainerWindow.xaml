<Window 
    x:Class="Lucky.Views.ContainerWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
	xmlns:controls="clr-namespace:Lucky.Controls"
    xmlns:app="clr-namespace:Lucky"
	WindowStartupLocation="CenterScreen"
    Background="{DynamicResource AppBackgroundBrush}"
    ui:WindowHelper.UseModernWindowStyle="True"
	Title="{Binding Title}"
	mc:Ignorable="d" d:DesignHeight="360" d:DesignWidth="600">

    <Grid>
        
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"></RowDefinition>
		</Grid.RowDefinitions>
        
		<!--上标题栏-->
        <Border Grid.Row="0">
            <DockPanel x:Name="Container" />
        </Border>
        
		<Grid Grid.Row="2" Visibility="{Binding FooterVisible}">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"></ColumnDefinition>
				<ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="1" Margin="20 0 0 0" Text="{Binding FooterText}"></TextBlock>
		</Grid>
        
	</Grid>
</Window>
