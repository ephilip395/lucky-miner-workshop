<UserControl 
    x:Class="Lucky.Views.Ucs.Icons"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:sys="clr-namespace:System;assembly=mscorlib"
	xmlns:blankWindow="http://luckycm.monsterorb.com"
	xmlns:controls="clr-namespace:Lucky.Controls"
	xmlns:local="clr-namespace:Lucky.Views.Ucs"
	xmlns:vm="clr-namespace:Lucky.Vms"
	Background="White"
	mc:Ignorable="d" 
	d:DesignWidth="960"
	d:DesignHeight="520"
    d:DataContext="{d:DesignData Source=../Design/IconsViewModel.xaml}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <WrapPanel VerticalAlignment="Center" Margin="0 0 -100 0" HorizontalAlignment="Center">
            <Path 
				Width="30"
				Height="30"
				Fill="{StaticResource BtnBackground}"
				Stretch="Fill"
				Data="{StaticResource Icon_Search}"></Path>
            <controls:KbTextBox 
                Margin="4 0 0 0"
				x:Name="TbKeyword" 
                Width="300" 
                Height="40"
                FontSize="18"
				Text="{Binding Keyword, UpdateSourceTrigger=PropertyChanged}" 
				VerticalContentAlignment="Center"
				Hint="请输入关键字"
				BorderBrush="{StaticResource LightLineColor}"
				BorderThickness="1"
				Background="White"
				SelectedColor="#409EFF" />
            <controls:KbButton 
				Height="20"
				Background="Transparent" 
				BorderThickness="0"
				Command="{Binding ClearKeyword}"
				Visibility="{Binding ElementName=TbKeyword,Path=Text, Converter={StaticResource NotNullOrEmptyVisibilityConverter}}"
				Margin="-22 0 0 0" 
				HorizontalAlignment="Left">
                <Path
					Width="16"
					Height="16"
					Data="{StaticResource Icon_Close}"
					Fill="{StaticResource BtnBackground}"
					Stretch="Fill" />
            </controls:KbButton>
            <controls:KbLinkButton
                Margin="2 0 0 0"
				Command="{Binding OpenIconfontWebSite}"
				KbDisplayLine="False"
                VerticalAlignment="Bottom"
				Content="阿里巴巴矢量图标库"
				Background="Transparent">
            </controls:KbLinkButton>
        </WrapPanel>
        <ScrollViewer
            Grid.Row="1"
			VerticalScrollBarVisibility="Auto" 
			PreviewMouseDown="ScrollViewer_PreviewMouseDown">
            <ItemsControl 
		        Background="Transparent"
		        ItemsSource="{Binding Icons}"
				MouseDown="MetroWindow_MouseDown"
		        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
		        ScrollViewer.VerticalScrollBarVisibility="Auto"
		        BorderThickness="0">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel></WrapPanel>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border 
                            x:Name="border"
                            Width="78" Height="78" 
                            Margin="2" Padding="4" 
                            ToolTip="{Binding Key}"
                            BorderThickness="1" 
                            BorderBrush="{Binding BorderBrush}">
                            <StackPanel>
                                <Path 
					                Height="40"
					                Data="{Binding Data}"
					                Fill="{StaticResource BtnBackground}"
					                Stretch="Uniform" />
                                <TextBox 
                                    HorizontalAlignment="Center" 
                                    Margin="0 4 0 0" 
                                    BorderThickness="0" 
                                    IsReadOnly="True" 
                                    Text="{Binding Key, Mode=OneWay}"></TextBox>
                            </StackPanel>
                        </Border>
                        <DataTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#C9DEF5"></Setter>
                            </Trigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
